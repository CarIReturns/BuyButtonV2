--Properties:

buybuttonsconceptversion.Name = "buybuttons concept version"
buybuttonsconceptversion.Parent = game.CoreGui
buybuttonsconceptversion.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

StoneAxe.Name = "Stone Axe"
StoneAxe.Parent = buybuttonsconceptversion
StoneAxe.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
StoneAxe.Position = UDim2.new(-1.49011612e-08, 0, 0.0726256669, 0)
StoneAxe.Size = UDim2.new(0, 200, 0, 50)
StoneAxe.Font = Enum.Font.SourceSans
StoneAxe.Text = "Stone Axe"
StoneAxe.TextColor3 = Color3.fromRGB(0, 0, 0)
StoneAxe.TextSize = 14.000
StoneAxe.MouseButton1Click:connect(function()
	local axetobuy = "stone_axe"
	local price = "20"
	local args = {
		[1] = {
			["shopItem"] = {
				["currency"] = "iron",
				["itemType"] = axetobuy,
				["amount"] = 1,
				["price"] = price,
				["category"] = "Tools",
				["spawnWithItems"] = {
					[1] = axetobuy
				},
				["tiered"] = true
			}
		}
	}

	game:GetService("ReplicatedStorage").rbxts_include.node_modules.net.out._NetManaged.BedwarsPurchaseItem:InvokeServer(unpack(args))
end)

